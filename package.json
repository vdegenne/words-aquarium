{
  "name": "words-aquarium",
  "version": "1.0.0",
  "description": "create a word aquarium :D",
  "type": "module",
  "author": "Valentin Degenne <vdegenne@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "devDependencies": {
    "@material/web": "^2.2.0",
    "@snar/lit": "^1.6.0",
    "@tailwindcss/postcss": "^4.0.12",
    "@vdegenne/about-dialog": "^0.4.2",
    "@vdegenne/material-color-helpers": "^1.11.0",
    "@vdegenne/mini-rest": "^0.1.5",
    "@vdegenne/rollup-plugin-minify-html": "^1.0.6",
    "@vite-pwa/assets-generator": "^0.2.6",
    "asian-regexps": "^5.1.0",
    "custom-element-decorator": "^0.6.0",
    "html-vision": "^0.1.5",
    "lit": "^3.2.1",
    "lit-with-styles": "^2.1.3",
    "material-3-prompt-dialog": "^1.0.1",
    "material-shell": "^1.2.7",
    "rollup-plugin-material-all": "^1.2.2",
    "rollup-plugin-minify-template-literals": "^1.1.7",
    "snar": "^2.2.0",
    "snar-save-to-local-storage": "^1.0.1",
    "tailwindcss": "^4.0.12",
    "toastit": "^2.1.3",
    "typescript": "^5.8.2",
    "vite": "^6.2.1",
    "vite-plugin-mdicon2svg": "^0.1.0",
    "vite-plugin-pwa": "^0.21.1",
    "vscode-ui-connector": "^0.2.4",
    "wireit": "^0.14.11"
  },
  "scripts": {
    "dev": "wireit",
    "build": "wireit",
    "pwa-assets": "wireit"
  },
  "wireit": {
    "dev": {
      "service": true,
      "command": "vite --host",
      "dependencies": [
        "vuc",
        "pwa-assets"
      ]
    },
    "build": {
      "command": "vite build",
      "files": [
        "./vite.config.ts",
        "./src",
        "./index.html",
        "./public"
      ],
      "output": [],
      "dependencies": [
        "pwa-assets"
      ]
    },
    "vuc": {
      "service": true,
      "command": "vuc",
      "files": [
        "./.vuc.json"
      ]
    },
    "pwa-assets": {
      "command": "pwa-assets-generator --preset minimal-2023 --html.preset 2023 public/logo.svg",
      "files": [
        "public/logo.svg"
      ],
      "output": [
        "public/pwa-64x64.png",
        "public/pwa-192x192.png",
        "public/pwa-512x512.png",
        "public/maskable-icon-512x512.png",
        "public/apple-touch-icon-180x180.png",
        "public/favicon.ico"
      ]
    }
  }
}